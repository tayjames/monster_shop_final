<h1><%= @user.name %></h1>
<p><%= @user.email %></p>

<% @user.addresses.each do |address| %>
  <section id='address-<%= address.id %>'>
    <h3><%= address.nickname %></h3>
    <p><%= address.street %></p>
    <p><%= address.city %></p>
    <p><%= address.state %></p>
    <p><%= address.zip %></p>


    <% if address.shipped_orders == [] %>
      <%= link_to 'Edit Address', edit_user_address_path(address) %>
      <%= button_to 'Delete Address', user_address_path(address), method: :delete %>
    <% end %>
  </section>
<% end %>
